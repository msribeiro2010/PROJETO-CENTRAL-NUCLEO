# Configurações de Produção - Central Núcleo
# Copie este arquivo para .env e ajuste conforme necessário

# Porta da aplicação
PORT=8080

# Ambiente
NODE_ENV=production

# Configurações do servidor
SERVER_HOST=0.0.0.0
SERVER_TIMEOUT=30000

# Configurações de cache (em segundos)
CACHE_STATIC_FILES=86400
CACHE_HTML_FILES=3600
CACHE_JSON_FILES=300

# Configurações de segurança
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Configurações de compressão
ENABLE_GZIP=true
GZIP_LEVEL=6

# Configurações de logs
LOG_LEVEL=info
LOG_FORMAT=combined

# SSL/HTTPS (para produção)
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Configurações do Docker
DOCKER_RESTART_POLICY=unless-stopped
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1.0